#!/bin/bash

# Set number of cores here
J=-j16

PREFIX_PATH=~/tmp
PREFIX=--prefix=$PREFIX_PATH/arm-eabi-4.8

#Make a clean build
if [ -e Makefile ];
then
    make $J distclean
fi;

#Make a clean install always
if [ -d "$PREFIX_PATH" ]
then
    rm -rf $PREFIX_PATH
fi;

#Build Configuration
./configure $PREFIX --target=arm-eabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-eabi-&' --with-gcc-version=SaberMod --with-binutils-version=gnu --with-gmp-version=gnu --with-mpfr-version=gnu --with-mpc-version=gnu --with-gdb-version=gnu --with-sysroot=/ --enable-threads=single

#Build the toolchain
make $J;

#Install the toolchain
make install;

