#!/bin/bash

#Make a clean build
if [ -e Makefile ];
then
    make -j10 distclean
fi;

#Make a clean install always
if [ -d /tmp/arm-linux-androideabi ]
then
    rm -rf /tmp/arm-linux-androideabi
fi;

# use host gcc 4.7 to build with
export CC=gcc-4.7;
export CXX=g++-4.7;

#Build Configuration
./configure --prefix=/tmp/arm-linux-androideabi --target=arm-linux-androideabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-linux-androideabi-&' --with-gcc-version=4.8 --with-binutils-version=2.23 --with-gold-version=2.23 --enable-gold=default --enable-plugins --with-gmp-version=4.3.2 --with-mpfr-version=2.4.2 --with-gdb-version=7.3.x --with-sysroot=/ --with-host-libstdcxx='-static-libgcc -Wl,-Bstatic,-lstdc++,-Bdynamic -lm' --enable-threads=posix --with-cloog-version=0.18.0 --with-isl-version=0.11.1 --enable-graphite=yes --disable-libquadmath --disable-libatomic

#Build the toolchain
make -j10;

#Install the toolchain
make install;

